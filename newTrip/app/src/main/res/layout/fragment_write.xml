<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/onlyforscrollview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/Plus"
                    android:layout_width="33dp"
                    android:layout_height="41dp"
                    android:layout_marginEnd="240dp"
                    android:text="+"
                    app:layout_constraintBottom_toBottomOf="@+id/Minus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/DayNumber"
                    app:layout_constraintTop_toTopOf="@+id/DayNumber"
                    app:layout_constraintVertical_bias="1.0" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/etc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CategoryTitle">

                    <CheckBox
                        android:id="@+id/SightSeeing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관광"
                        android:textSize="10dp"
                        tools:layout_editor_absoluteX="119dp"
                        tools:layout_editor_absoluteY="127dp" />

                    <CheckBox
                        android:id="@+id/Cafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카페"
                        android:textSize="10dp"
                        tools:layout_editor_absoluteX="169dp"
                        tools:layout_editor_absoluteY="127dp" />

                    <CheckBox
                        android:id="@+id/Nature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자연"
                        android:textSize="10dp"
                        tools:layout_editor_absoluteX="69dp"
                        tools:layout_editor_absoluteY="127dp" />

                    <CheckBox
                        android:id="@+id/Mukbang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="먹방"
                        android:textSize="10dp"
                        tools:layout_editor_absoluteX="319dp"
                        tools:layout_editor_absoluteY="127dp" />

                    <CheckBox
                        android:id="@+id/Orm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오름"
                        android:textSize="10dp"
                        tools:layout_editor_absoluteX="219dp"
                        tools:layout_editor_absoluteY="127dp" />

                    <CheckBox
                        android:id="@+id/Healing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="힐링"
                        android:textSize="10dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="127dp" />

                    <CheckBox
                        android:id="@+id/Ocean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바다"
                        android:textSize="10dp"
                        tools:layout_editor_absoluteX="269dp"
                        tools:layout_editor_absoluteY="127dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:ems="10"
                    android:hint="제목"
                    android:inputType="text|textPersonName"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toTopOf="@+id/CategoryTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/WriteDownIfShared" />

                <TextView
                    android:id="@+id/etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="기타"
                    app:layout_constraintBottom_toTopOf="@+id/Minus"
                    app:layout_constraintEnd_toStartOf="@+id/add"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

                <Button
                    android:id="@+id/Minus"
                    android:layout_width="33dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="-"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/DayNumber"
                    app:layout_constraintStart_toEndOf="@+id/Period"
                    app:layout_constraintTop_toBottomOf="@+id/WriteDownIfShared" />

                <EditText
                    android:id="@+id/DayNumber"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/Plus"
                    app:layout_constraintStart_toEndOf="@+id/Minus"
                    app:layout_constraintTop_toTopOf="@+id/Minus" />

                <TextView
                    android:id="@+id/WriteDownIfShared"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="151dp"
                    app:layout_constraintBottom_toTopOf="@+id/Minus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.00999999" />

                <TextView
                    android:id="@+id/CategoryTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="2dp"
                    android:text="카테고리"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintStart_toStartOf="@+id/Title"
                    app:layout_constraintTop_toBottomOf="@+id/Title" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="34dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="318dp"
                    android:text="+"
                    app:layout_constraintBaseline_toBaselineOf="@+id/etc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/etc" />

                <TextView
                    android:id="@+id/Period"
                    android:layout_width="44dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="4dp"
                    android:text="기간"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add" />
            </android.support.constraint.ConstraintLayout>

            <ScrollView
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="279dp">

                <LinearLayout
                    android:id="@+id/con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/PlusRoute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/DayText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="10dp"
                                android:text="1일차"
                                android:textSize="15dp"
                                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/Memo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="60dp"
                                android:layout_marginBottom="14dp"
                                android:ems="10"
                                android:hint="memo"
                                android:inputType="textPersonName"
                                android:textAlignment="textStart"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView2"
                                app:layout_constraintTop_toBottomOf="@+id/destination_title" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="101dp"
                                android:layout_height="97dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="16dp"
                                android:scaleType="fitStart"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/Memo"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/DayText"
                                app:srcCompat="@android:drawable/ic_input_add"
                                tools:srcCompat="@android:drawable/ic_input_add" />

                            <EditText
                                android:id="@+id/destination_title"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="8dp"
                                android:ems="10"
                                android:hint="Destination"
                                android:inputType="textPersonName"
                                app:layout_constraintBottom_toTopOf="@+id/Memo"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/imageView2"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="spread_inside" />

                        </android.support.constraint.ConstraintLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>